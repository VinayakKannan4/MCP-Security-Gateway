# Copy this file to .env and fill in real values.
# .env is gitignored — never commit real secrets.

# Application
ENVIRONMENT=dev

# Database (matches docker-compose.yml defaults)
DATABASE_URL=postgresql+asyncpg://gateway:gateway@localhost:5432/gateway

# Redis (matches docker-compose.yml defaults)
REDIS_URL=redis://localhost:6379/0

# LLM — get your key from https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-...

# Security — generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_API_KEY=change-me

# Approval tokens
APPROVAL_TOKEN_TTL_SECONDS=3600

# Observability (set to true when running with docker-compose.yml otel-collector)
OTEL_ENABLED=false
OTEL_ENDPOINT=http://localhost:4317

# Logging
LOG_LEVEL=INFO
